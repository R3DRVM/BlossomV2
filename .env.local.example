# Blossom Frontend - Local Environment Template
# Copy this to .env.local and fill in your values
# DO NOT commit .env.local to git

# ============================================
# Backend Connection
# ============================================
# Backend API URL (default: http://localhost:3001)
VITE_AGENT_API_URL=http://localhost:3001
# Enable backend mode (required for whitelist testing)
VITE_USE_AGENT_BACKEND=true

# ============================================
# Execution Mode
# ============================================
# Options: sim, eth_testnet
VITE_EXECUTION_MODE=eth_testnet
# Options: direct, session
VITE_EXECUTION_AUTH_MODE=session
# Options: manual, atomic (Route 2)
VITE_FUNDING_ROUTE_MODE=atomic

# ============================================
# RPC Configuration
# ============================================
# Sepolia RPC URL (for wallet connection)
VITE_ETH_TESTNET_RPC_URL=https://sepolia.infura.io/v3/YOUR_KEY
